# FLEXT Core Configuration
# Copy this file to .env and fill in your actual values

# === WORKSPACE CONFIGURATION ===
WORKSPACE_ROOT=/home/marlonsc/flext
PYTHON_VENV=/home/marlonsc/flext/.venv
DEBUG_MODE=true

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://flext:flext@localhost:5432/flext_core
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# === JWT CONFIGURATION ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=RS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# === GRPC CONFIGURATION ===
GRPC_HOST=localhost
GRPC_PORT=50051
GRPC_MAX_WORKERS=10
GRPC_MAX_MESSAGE_SIZE=4194304

# === API CONFIGURATION ===
API_HOST=localhost
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# === MONITORING CONFIGURATION ===
MONITORING_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
PROMETHEUS_ENABLED=false

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/flext-core.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# === PLUGIN CONFIGURATION ===
PLUGIN_WATCH_DIRECTORY=./plugins
PLUGIN_HOT_RELOAD=false
PLUGIN_DISCOVERY_INTERVAL=60

# === EVENT BUS CONFIGURATION ===
EVENT_BUS_ENABLED=true
EVENT_BUS_BACKEND=memory
EVENT_BUS_MAX_RETRIES=3

# === SECURITY CONFIGURATION ===
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# === DEVELOPMENT SETTINGS ===
ENVIRONMENT=development
DEBUG=true
TESTING=false
PROFILE_ENABLED=false

# === PERFORMANCE TUNING ===
THREAD_POOL_SIZE=10
ASYNC_POOL_SIZE=50
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=300

# === FEATURE FLAGS ===
FEATURE_ASYNC_PROCESSING=true
FEATURE_CACHING=true
FEATURE_METRICS=false
FEATURE_TRACING=false