# FLEXT Core Configuration
# Copy this to .env and customize for your environment

DEBUG=true
# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

DATABASE_ECHO=false
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_SIZE=20
# Database Configuration
DATABASE_URL=postgresql://flext:password@localhost:5432/flext_core

REDIS_MAX_CONNECTIONS=50
# Redis Configuration
REDIS_URL=redis://localhost:6379/5

# Event Bus Configuration
EVENT_BUS_ENABLED=true
EVENT_BUS_REDIS_URL=redis://localhost:6379/6
EVENT_RETENTION_HOURS=168

DEFAULT_CPU_LIMIT=2.0
DEFAULT_MEMORY_LIMIT_MB=1024
# Domain Configuration
PIPELINE_NAME_MAX_LENGTH=100
PLUGIN_TIMEOUT_SECONDS=3600

# Configuration Management
CONFIG_BACKEND=env
CONFIG_CACHE_ENABLED=true
CONFIG_VALIDATION_STRICT=true

DI_COMPONENT_SCANNING=true
# Dependency Injection
DI_CONTAINER=lato
DI_LAZY_LOADING=true

UUID_NAMESPACE=
# UUID Generation
UUID_VERSION=4

METRICS_PORT=9093
OPENTELEMETRY_ENABLED=false
# Monitoring & Observability
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Configuration
POOL_SIZE=10
RETRY_ATTEMPTS=3
TIMEOUT=30

MEMORY_PROFILING=false
# Development Tools
PROFILING_ENABLED=false
QUERY_LOGGING=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_URL=redis://localhost:6379/15
