{
  // Cursor-specific settings for FLEXT Core
  "cursor.aiEnabled": true,
  "cursor.aiProvider": "anthropic",
  "cursor.aiModel": "claude-3-opus",

  // Code generation preferences
  "cursor.codeGeneration": {
    "style": "enterprise",
    "principles": ["SOLID", "DRY", "KISS", "YAGNI"],
    "patterns": [
      "Clean Architecture",
      "Domain-Driven Design",
      "Repository Pattern",
      "Service Pattern"
    ]
  },

  // Python-specific AI assistance
  "cursor.python": {
    "version": "3.13",
    "typeHints": "always",
    "docstrings": "google",
    "testing": "pytest",
    "async": true,
    "strictMode": true
  },

  // Project context
  "cursor.projectContext": {
    "type": "library",
    "domain": "enterprise-framework",
    "architecture": "clean",
    "dependencies": ["pydantic"],
    "quality": "production"
  },

  // AI behavior
  "cursor.ai": {
    "suggestTests": true,
    "suggestTypes": true,
    "suggestDocs": true,
    "explainErrors": true,
    "refactorSuggestions": true,
    "securityChecks": true
  },

  // Code review preferences
  "cursor.codeReview": {
    "checkComplexity": true,
    "checkSecurity": true,
    "checkPerformance": true,
    "checkBestPractices": true,
    "strictness": "high"
  }
}
