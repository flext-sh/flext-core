# Test environment configuration for FLX-Core

# Application settings
FLX_ENVIRONMENT=testing
FLX_DEBUG=false
FLX_LOG_LEVEL=WARNING

# Database settings (SQLite for tests)
FLX_DATABASE_URL=sqlite+aiosqlite:///:memory:
FLX_DATABASE_ECHO=false
FLX_DATABASE_POOL_SIZE=5

# Redis settings (mocked for tests)
FLX_REDIS_URL=redis://localhost:6379/15
FLX_TEST_MOCK_REDIS=true

# Security settings
FLX_JWT_SECRET_KEY=test-secret-key-for-testing-only
FLX_JWT_ALGORITHM=HS256
FLX_JWT_EXPIRATION_MINUTES=60

# External services (mocked for tests)
FLX_TEST_MOCK_EXTERNAL_SERVICES=true
FLX_TEST_MODE=true

# API settings
FLX_API_HOST=localhost
FLX_API_PORT=8000
FLX_API_RATE_LIMIT=1000

# gRPC settings
FLX_GRPC_HOST=localhost
FLX_GRPC_PORT=50051
FLX_GRPC_MAX_MESSAGE_SIZE_MB=10

# Plugin settings
FLX_PLUGIN_DIRECTORY=/tmp/test_plugins
FLX_PLUGIN_AUTO_DISCOVERY=false

# Meltano settings
FLX_MELTANO_PROJECT_ROOT=/tmp/test_meltano
FLX_MELTANO_ENVIRONMENT=test